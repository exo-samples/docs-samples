<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>angular-portlet-webpack-package</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <!-- wars -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>webapps</outputDirectory>
            <includes>
                <include>${project.groupId}:angular-portlet-webpack:war</include>
            </includes>
            <scope>provided</scope>
            <outputFileNameMapping>angular-portlet-webpack.war</outputFileNameMapping>
        </dependencySet>
        <!-- services -->
        <dependencySet>
            <useProjectArtifact>false</useProjectArtifact>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>${project.groupId}:angular-portlet-webpack-services:jar</include>
            </includes>
            <scope>provided</scope>
        </dependencySet>
    </dependencySets>
</assembly>
